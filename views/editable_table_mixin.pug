mixin entry_table(entry, isStatic)
  - var relief_arr = ['n/a', 'helped', 'did not help'];
  - var status_arr = ['fine', 'migraine', 'motion-migraine', 'tightness'];
  tr
    td Status on waking up
    if isStatic
      td #{entry.status_on_wakeup}
    else
      td
        select.form-control(name='status_on_wakeup')
          for value in status_arr
            if value == entry.status_on_wakeup
              option(selected) #{value}
            else
              option #{value}
  tr
    td Severity
    if isStatic
      td #{entry.severity}
    else
      td
        - var i = 0
        select.form-control(name='severity')
          while i <= 10
            option #{i++}
  tr
    td Relief Method: Tea
    if isStatic
      td #{entry.relief_methods.tea}
    else
      td
        select.form-control(name='tea')
          for value in relief_arr
            if value == entry.relief_methods.tea
              option(selected) #{value}
            else
              option #{value}
  tr
    td Relief Method: Walk
    if isStatic
      td #{entry.relief_methods.walk}
    else
      td
        select.form-control(name='walk', value=entry.relief_methods.walk)
          for value in relief_arr
            if value == entry.relief_methods.walk
              option(selected) #{value}
            else
              option #{value}
  tr
    td Relief Method: Bath
    if isStatic
      td #{entry.relief_methods.bath}
    else
      td
        select.form-control(name='bath', value=entry.relief_methods.bath)
          for value in relief_arr

        select.form-control(name='rizora', value=entry.relief_methods.rizora)
          for value in relief_arr
            if value == entry.relief_methods.rizora
              option(selected) #{value}
            else
              option #{value}
  tr
    td Possible Trigger: Took night medication on time
    if isStatic
      td #{entry.status_of_triggers.night_meds_on_time}
    else
      td
        if entry.status_of_triggers.night_meds_on_time === true
          input.form-control(name='night_meds_on_time', type='checkbox', checked)
        else
          input.form-control(name='night_meds_on_time', type='checkbox')
  tr
    td Possible Trigger: Took ayurvedic medicines
    if isStatic
      td #{entry.status_of_triggers.ayurvedic_medicine}

extends layout

block content
  h1 #{entry.datestr}
  button.glyphicon.glyphicon-pencil(data-toggle="modal" href='#inputModal' data-target="#inputModal")
  button.glyphicon.glyphicon-trash(onClick=console.log("Pressed Delete"))
  div
    table(class='table')
      tbody
        tr
          td Status on waking up
          td #{entry.status_on_wakeup}
        tr
          td Severity
          td #{entry.severity}
        tr
          td Relief Method: Tea
          td #{entry.relief_methods.tea}
        tr
          td Relief Method: Walk
          td #{entry.relief_methods.walk}
        tr
          td Relief Method: Bath
          td #{entry.relief_methods.bath}
        tr
          td Relief Method: Aciloc
          td #{entry.relief_methods.aciloc}
        tr
          td Relief Method: Food
          td #{entry.relief_methods.food}
        tr
          td Relief Method: Random Medicine
          td #{entry.relief_methods.random}
        tr
          td Relief Method: Rizora
          td #{entry.relief_methods.rizora}
        tr
          td Possible Trigger: Took night medication on time
          td #{entry.status_of_triggers.night_meds_on_time}
        tr
          td Possible Trigger: Took ayurvedic medicines
          td #{entry.status_of_triggers.ayurvedic_medicine}
        tr
          td Possible Trigger: Overexertion
          td #{entry.status_of_triggers.overexertion}
        tr
          td Possible Triggers: Acidity
          td #{entry.status_of_triggers.acidity}
  div(id='inputModal', class='modal fade', tabindex='-1', role='dialog', aria-hidden='true')
    div(class='modal-dialog', role='document')
      div.modal-content
        div.modal-header
          h2.modal-title Edit Entry
          button.close(type='button', data-dismiss='modal')
        div.modal-body
        table(class='table')
          tbody
            tr
              td Status on waking up
              td
                input(type='text', value=entry.status_on_wakeup)
            tr
              td Severity
              td
                input(type='text', value=entry.severity)
            tr
              td Relief Method: Tea
              td
                input(type='text', value=entry.relief_methods.tea)
            tr
              td Relief Method: Walk
              td
                input(type='text', value=entry.relief_methods.tea)
            tr
              td Relief Method: Bath
              td
                input(type='text', value=entry.relief_methods.bath)
            tr
              td Relief Method: Aciloc
              td
                input(type='text', value=entry.relief_methods.aciloc)
            tr
              td Relief Method: Food
              td
                input(type='text', value=entry.relief_methods.food)
            tr
              td Relief Method: Random Medicine
              td
                input(type='text', value=entry.relief_methods.random)
            tr
              td Relief Method: Rizora
              td
                input(type='text', value=entry.relief_methods.rizora)
            tr
              td Possible Trigger: Took night medication on time
              td
                input(type='text', value=entry.status_of_triggers.night_meds_on_time)
            tr
              td Possible Trigger: Took ayurvedic medicines
              td
                input(type='text', value=entry.status_of_triggers.ayurvedic_medicine)
            tr
              td Possible Trigger: Overexertion
              td
                input(type='text', value=entry.status_of_triggers.overexertion)
            tr
              td Possible Triggers: Acidity
              td
                input(type='text', value=entry.status_of_triggers.acidity)
        div.modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='button') Save

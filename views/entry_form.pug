extends layout

block content
  h1 #{title}
  if errors
    ul.bg-warning.text-white
      for error in errors
        li!= error.msg
  form(method='POST', action='')
    table.table
      tbody
        tr
          td Date
          td
            input(name='date', type='date')
        tr
          td Status on waking up
          td
            input(name='status_on_wakeup', type='text', value='fine')
        tr
          td Severity
          td
            input(name='severity', type='text', value='0')
        tr
          td Relief Method: Tea
          td
            input(name='tea', type='text', value='n/a')
        tr
          td Relief Method: Walk
          td
            input(name='walk', type='text', value='n/a')
        tr
          td Relief Method: Bath
          td
            input(name='bath', type='text', value='n/a')
        tr
          td Relief Method: Aciloc
          td
            input(name='aciloc', type='text', value='n/a')
        tr
          td Relief Method: Food
          td
            input(name='food', type='text', value='n/a')
        tr
          td Relief Method: Random Medicine
          td
            input(name='random', type='text', value='n/a')
        tr
          td Relief Method: Rizora
          td
            input(name= 'rizora', type='text', value='n/a')
        tr
          td Possible Trigger: Took night medication on time
          td
            input(name='night_meds_on_time', type='text', value='false')
        tr
          td Possible Trigger: Took ayurvedic medicines
          td
            input(name='ayurvedic_medicine', type='text', value='false')
        tr
          td Possible Trigger: Overexertion
          td
            input(name='overexertion', type='text', value='false')
        tr
          td Possible Triggers: Acidity
          td
            input(name='acidity', type='text', value='false')
    button.btn.btn-primary(type='submit') Save
